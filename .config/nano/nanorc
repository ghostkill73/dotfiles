# nanorc
# ########################################
# Includes
# ########################################

include "/usr/share/nano/*.nanorc"
include "/usr/share/nano/extra/*.nanorc"

# ########################################
# Options
# ########################################

set afterends
set atblanks
set autoindent
set emptyline
set historylog
set indicator
set linenumbers
set locking
#set magic
set mouse
set numbercolor yellow,normal
set positionlog
#set regexp
set scrollercolor grey,normal
set showcursor
set smarthome
set softwrap
#set speller "cmd ..."
set stateflags
set tabsize 2
set trimblanks
set unix
set wordchars "_"
set zap
#set zero

# ########################################
# Keybinds
# ########################################

# 1
bind ^Q exit all
bind ^W writeout main
bind ^E execute main
bind ^R replace main
bind ^T gotoline main
unbind ^Y main
bind ^U redo main
bind ^I insert main
unbind ^O main
bind ^P location main

# 2
unbind ^A main
bind ^S "{execute}| sed 's/\s\+$//' {enter}{savefile}" main
bind ^F wherewas main
bind ^G whereis main
bind ^H help all
bind ^H exit help
bind ^J justify main
bind ^K zap main
bind ^L center main

# 3
bind ^Z undo main
bind ^X cut main
bind ^C cancel all
bind ^C copy main
bind ^V paste main
unbind ^B main

# Alt
bind M-A mark main
unbind M-B main
unbind M-E main
unbind M-F main
unbind M-G main
unbind M-B main
bind M-Q findnext main
bind M-W findprevious main
bind M-R refresh all
unbind M-U main

unbind M-0 main
unbind M-1 main
unbind M-2 main
unbind M-3 main
unbind M-4 main
unbind M-5 main
unbind M-6 main
unbind M-7 main
unbind M-8 main
unbind M-9 main

unbind M-Space main
unbind M-^ main
unbind M-. main
unbind M-, main
unbind M-( main
unbind M-) main
unbind M-} main
unbind M-{ main

# Shift
bind Sh-M-F formatter main
bind Sh-M-I linter main

# Fn
unbind F1 main
unbind F2 main
unbind F3 main
unbind F4 main
unbind F5 main
unbind F6 main
unbind F7 main
unbind F8 main
unbind F9 main
unbind F10 main
unbind F11 main
unbind F12 main

# extra
bind ^Space complete main
bind ^/ comment main
unbind ^\ main
unbind ^] main
unbind Ins main
